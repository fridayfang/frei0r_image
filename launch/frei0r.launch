<?xml version="1.0" encoding="ISO-8859-1"?>
<launch>
  <arg name="device" default="0" />

  <node pkg="image_publisher" type="image_publisher"
    name="image_pub"
    args="$(find vimjay)/data/clouds.png"
    if="false" >
    <param name="publish_rate" value="5.0"/>
  </node>

  <node name="image_source" pkg="usb_cam" type="usb_cam_node"
      output="screen">
    <param name="image_width" value="320"/>
    <param name="image_height" value="240"/>
    <param name="framerate" value="30"/>
    <param name="video_device" value="/dev/video$(arg device)" />
    <!--param name="pixel_format" value="mjpeg" /-->
    <param name="pixel_format" value="yuyv"/>
  </node>

  <!-- TODO(lucasw) need to separate out the non-private ddr
       to be able to have to frei0rs in the same ns -->
  <group ns="frei0r1">
    <!--
    <node name="nodelet_manager" pkg="nodelet" type="nodelet"
        args="manager" output="screen" />
    <node name="screen_grab" pkg="nodelet" type="nodelet"
        args="load screen_grab/ScreenGrab nodelet_manager" output="screen" >
      <param name="update_rate" value="$(arg update_rate)" />
      <param name="x_offset" value="50" />
      <param name="y_offset" value="50" />
      <param name="width" value="500" />
      <param name="height" value="500" />
    </node>
    -->

    <node name="frei0r" pkg="frei0r_image" type="frei0r_image_node"
      output="screen" >
      <param name="path" value="$(env HOME)/other/install/lib/frei0r-1" />
      <!--remap from="image_in" to="/image_pub/image_raw" /-->
      <remap from="image_in" to="/image_source/image_raw" />
    </node>
  </group>

  <group ns="frei0r2">
    <node name="frei0r2" pkg="frei0r_image" type="frei0r_image_node"
      output="screen" >
      <param name="path" value="$(env HOME)/other/install/lib/frei0r-1" />
      <!--remap from="image_in" to="/image_pub/image_raw" /-->
      <remap from="image_in" to="/frei0r1/image" />
      <remap from="image" to="image" />
    </node>
  </group>

  <!-- TODO(lucasw) launch rqt -->
  <node name="rqt_traj" pkg="rqt_gui" type="rqt_gui"
    args="--perspective-file $(find frei0r_image)/config/frei0r.perspective"
    output="screen" >
  </node>
</launch>
